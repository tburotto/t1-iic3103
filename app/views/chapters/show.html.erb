<div class="card" style="margin: 20px;" >
    <div class="card-header">
        <center>
            <h2> <%= @episode["name"]%> </h2>
        </center>
    </div>
    <div class="card-body">
        <h4> <i class="fa fa-film"> </i> Episodio </h4>
        <p> <%= @episode["episode"]%> </p>
        <h4> <i class="fa fa-calendar"> </i> Fecha estreno  </h4>
        <p> <%= @episode["air_date"]%> </p>
        <h4> <i class="fa fa-users"> </i> Personajes </h4>
        <table class="table table-striped">
            <thead>
                <th scope="col"> Nombre </th> 
            </thead>
            <tbody>
            <% @characters.each do |character| %>
                <tr> <td> <i class="fa fa-user"> </i>  <%= link_to  character["name"], "/characters/"+character["id"].to_s %></td> </tr>
            <% end %>
        </tbody>
        </table>
    </div>
  </div>
</div>